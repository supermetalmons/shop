{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "Node",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@solana/spl-account-compression": ["./node_modules/@solana/spl-account-compression/dist/types/src/index.d.ts"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
